  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via NPM",
      "request": "launch",
      "runtimeArgs": ["run-script", "test", "--", "--watch"],
      "runtimeExecutable": "npm",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },

    {
      "name": "Attach",
      "port": 9229,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}",
      "type": "node"
    }
  ]
}
